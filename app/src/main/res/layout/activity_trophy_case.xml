            android:layout_height="wrap_content"

            android:src="@drawable/question_icon"/>

        <ImageView
            android:id="@+id/b4_iv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:src="@drawable/question_icon"/>

        <ImageView
            android:id="@+id/b4_iv3"
