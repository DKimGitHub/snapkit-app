        <ImageView
            android:id="@+id/b2_iv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:src="@drawable/question_icon"/>
        <ImageView
            android:id="@+id/b2_iv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:src="@drawable/question_icon"/>
    </TableRow>

    <TextView
        android:id="@+id/collection3"
        android:layout_width="0dp"
        android:layout_height="40dp"
